<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.day02_homework3.Main2Activity">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >
       <ImageView
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:id="@+id/tea_img"
           android:src="@mipmap/ic_launcher"
           />
       <TextView
           android:layout_toRightOf="@id/tea_img"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/app_name"
           android:id="@+id/tea_name"
           />
       <TextView
           android:layout_toRightOf="@id/tea_img"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/app_name"
           android:layout_below="@id/tea_name"
           android:layout_marginTop="20dp"
           android:id="@+id/tea_title"
           />
   </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/teacher_tab"
        />
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/tea_vp"
        />
</LinearLayout>
